<p id="notice"><%= notice %></p>
<link rel="stylesheet" href="/master.css">

<body>
  <h1 align= "center">Welcome to the cities page.</h1>
 <header>
<div class="table-responsive" align="center">
  <table class="table table-striped">
  <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Population</th>
      <th>Desciption</th>
      <th>Countr id </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= city.population %></td><br>
        <td><%= city.desciption %></td><br>
        <td><%= city.country_id %></td><br>
        <td><%= link_to 'Show', city, :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_city_path(city), :class => 'btn btn-success'  %></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</table>



<button><%= link_to 'New City', new_city_path, :class => 'btn btn-primary' %></button>
<button id="newcountry"type="button" name="button"><%= link_to 'Back', countries_path, :class => 'btn btn-primary' %></button>

</div>
</header>
</body>
