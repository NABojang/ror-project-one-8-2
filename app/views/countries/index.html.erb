<p id="notice"><%= notice %></p>
<link rel="stylesheet" href="/master.css">


<h1>Welcome to the countries page.</h1>
<img src="https://www.worldatlas.com/r/w728-h425-c728x425/upload/ce/01/44/shutterstock-772913290.jpg" alt="image" height="300px" width="250px" align="left">
<img src="http://deltaadventure.info/wp-content/uploads/2018/04/download-map-world-countries-continents-and-hd.jpg" align= "center" height="300px" width="300px" >
<table class="table table-striped">
    <table>
      <thead>
        <tr>


          <th>Name</th>
          <th>Capital</th>
          <th>Location</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @countries.each do |country| %>
          <tr>
            <td><%= country.name %></td>
            <td><%= country.capital %></td>
            <td><%= country.location %></td>
            <td><%= link_to 'Show', country %></td>
            <td><%= link_to 'Edit', edit_country_path(country) %></td>
            <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>

        <% end %>
      </tbody>
    </table>
  </table>
  <button id="newcountry"type="button" name="button"><%= link_to 'Add New Country', new_country_path %></button>

