<p id="notice"><%= notice %></p>
<link rel="stylesheet" href="/master.css">

<body>
  <h1 align="center">Welcome to the countries page.</h1>
  <button type="button" onclick="myFunction()">Information</button>
  <p id="demo"></p>

  <table class="table table-striped" >
    <thead>
      <tr>
        <th>Name</th>
        <th>Capital</th>
        <th>Location</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @countries.each do |country| %>
        <tr>
          <td><%= country.name %></td>
          <td><%= country.capital %></td>
          <td><%= country.location %></td>
          <td><%= link_to 'Show', country, :class => 'btn btn-primary' %></td>
          <td><%= link_to 'Edit', edit_country_path(country), :class => 'btn btn-success' %></td>
          <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
    </table>

  <button id="newcountry"type="button" name="button"><%= link_to 'Add New Country', new_country_path %></button>

  <script>
  function myFunction() {
      document.getElementById("demo").innerHTML = "Welcome to the country page. This page is help travellers find information about countries, cities and location. The blog can be used to learn about countries, capitals and population.";

      document.getElementById("tab").style.fontSize = "20px";
  }
  </script>
</body>
